@model IEnumerable<StudentManagementSystem.Models.Student>

<h2>Student List</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Add New Student</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.Department</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = s.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new { id = s.Id })" class="btn btn-danger btn-sm">Delete</a>
					<a href="@Url.Action("Details", new { id = s.Id })" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

